{
     "manifest_version": 2,
     "name": "ByRavn Image Replacer (16-09-2024 (v10.08))",
     "description": "Evaluate and replace encoded images",
     "version": "1.0",
     "background": {
          "scripts":["background.js"]
     },

     "content_scripts": [{
          "matches": [
               "*://*/*.*",
               "file:///*/*.*",
               "http://*/*",
               "https://*/*"
          ],
          "css": ["style.css"],
          "js": ["popup.js"],
          "run_at": "document_start",
          "all_frames": true
     }],

     "browser_action": {
          "default_icon": "icon.png",
          "default_popup": "popup.html"
     },

     "permissions": [
          "activeTab",
          "storage",
          "<all_urls>"
     ]
}
